<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_container"
        android:clickable="true">

    <ImageView
            android:id="@+id/message_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="200dp"
            android:background="@drawable/rounded_rectangle"
            android:paddingTop="32dp"
            android:paddingBottom="25dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:adjustViewBounds="true"
            android:clickable="true"

            android:src="@mipmap/harambe"

            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="2dp">
    </ImageView>

    <TextView
            android:id="@+id/sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingVertical="-2dp"
            android:fontFamily="@font/firacode_bold"
            android:textColor="@color/message_text"
            android:background="@drawable/rounded_rectangle_their"
            android:maxLines="1"
            android:textSize="12sp"
            android:textFontWeight="700"
            android:text="You"
            android:elevation="5pt"
            app:layout_constraintStart_toStartOf="@+id/message_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp" />

    <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-35dp"
            android:layout_marginBottom="3dp"
            android:maxLines="1"
            android:text="14:42"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/message_image"
            app:layout_constraintStart_toEndOf="parent"
            android:layout_marginEnd="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
