<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            android:background="@android:color/transparent"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/message_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/rounded_rectangle_their"
                    android:clickable="true"
                    android:minWidth="200dp"
                    android:minHeight="200dp"
                    android:paddingStart="8dp"
                    android:maxWidth="350dp"

                    android:paddingTop="32dp"

                    android:paddingEnd="8dp"

                    android:paddingBottom="25dp"
                    android:src="@mipmap/harambe"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/sender_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/message_sender_background"
                    android:elevation="5pt"
                    android:fontFamily="@font/firacode_bold"
                    android:maxLines="1"
                    android:paddingVertical="-2dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:text="Harambe"
                    android:textColor="@color/message_text"
                    android:textFontWeight="700"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/message_image"
                    app:layout_constraintTop_toTopOf="@+id/message_image"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="7dp" />

            <TextView
                    android:id="@+id/text_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="14:43"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/message_image"
                    app:layout_constraintEnd_toEndOf="@+id/message_image"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="12dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>